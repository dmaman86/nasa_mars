<div class="container pt-5">
  <div class="row align-items-center">
    <div class="col-md-12 col-lg-6">
      <%- include('../partials/image_card')%>
    </div>
    <div class="col-md-12 col-lg-6 pt-5">
      <div class="row">
        <div class="shadow-lg p-3 mb-5 bg-body rounded d-block">
          <h2 class="text-center">Set Password</h2>
          <div class="container text-center">
            <h4>Full Name: <%- user.firstName %> <%- user.lastName %></h4>
            <h4>Email: <%- user.email %></h4>
          </div>
          <form id="register">
            <div class="mb-3">
              <label for="inputPassword1" class="form-label">Password</label>
              <input type="password" class="form-control" id="inputPassword1" name="inputPassword1" aria-describedby="nameHelp">
              <div id="nameHelp" class="form-text"></div>
            </div>
            <div class="mb-3">
              <label for="inputPassword2" class="form-label">Re-enter password</label>
              <input type="password" class="form-control" id="inputPassword2" name="inputPassword2" aria-describedby="lastNameHelp">
              <div id="lastNameHelp" class="form-text"></div>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
          <div class="alert alert-success text-center" role="alert" id="success">
            
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
  